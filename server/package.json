{
  "name": "recipes-server",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "dotenv": "^10.0.0",
    "eslint-config-airbnb": "^19.0.2",
    "fastify": "^3.25.0",
    "fastify-autoload": "^3.9.0",
    "fastify-cors": "^6.0.2",
    "fastify-plugin": "^3.0.0",
    "global": "^4.4.0"

---
import "../styles/index.scss";
import Footer from "./Footer.astro";
interface Props {
  title: string;
  description?: string;
  showFooter?: boolean;
}

const { title, description, showFooter = true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description ? description : "Groceries and Recipes application by Noury Janse"} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    {showFooter ? <Footer /> : ""}
  </body>
</html>
<style is:global></style>

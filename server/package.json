{
  "name": "recipes-server",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@prisma/client": "^3.8.0",
    "dotenv": "^10.0.0",
    "eslint-config-airbnb": "^19.0.2",
    "fastify": "^3.25.0",
    "fastify-auth0-verify": "^0.7.0",
    "fastify-autoload": "^3.9.0",
    "fastify-cors": "^6.0.2",
    "fastify-plugin": "^3.0.0",
    "fastify-swagger": "^4.13.0",
    "global": "^4.4.0",
    "node-cache": "^5.1.2",
    "prisma": "^3.8.0"
  },
  "scripts": {
    "prod": "yarn build && node ./dist/index.js",
    "prisma-update": "npx prisma generate && npx prisma migrate dev --name init",
    "build": "rm -rf dist && tsc",
    "check": "tsc --noemit",
    "watch": "NODE_ENV=dev ts-node-dev --files --respawn --exit-child index.ts",
    "lint": "eslint --ext .ts .",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc.json '*.ts' --write"
  },
  "devDependencies": {
    "@types/node": "^17.0.1",
    "@types/node-cache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "prettier": "^2.5.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  }
}

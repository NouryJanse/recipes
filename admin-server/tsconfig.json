{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_module/@types",
      "./src/types"],
    },
    "types": ["node"],
    "include": ["src/**/*.ts", "types.d.ts"],
    "exclude": ["node_modules"],
}
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-glob": "^3.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
